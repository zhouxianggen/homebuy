<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="?android:attr/selectableItemBackground">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:scaleType="centerInside"
            android:id="@+id/thumbnail"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_toLeftOf="@+id/popup_menu"
            android:layout_toStartOf="@id/popup_menu"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:gravity="center_vertical|start"
                android:textColor="@color/main_text"
                android:text="@string/commodity_title"
                android:textSize="@dimen/text_size_primary"/>

            <TextView
                android:id="@+id/sale_info"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_secondary"
                android:textColor="@android:color/darker_gray"
                android:text="@string/sale_info"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/support_return"
                    style="@style/CommodityOptionImageView"
                    android:src="@drawable/support_return"/>

                <ImageView
                    android:id="@+id/in_discount"
                    style="@style/CommodityOptionImageView"
                    android:src="@drawable/in_discount"/>

                <ImageView
                    android:id="@+id/in_stock"
                    style="@style/CommodityOptionImageView"
                    android:src="@drawable/in_stock"/>

                <ImageView
                    android:id="@+id/outof_stock"
                    style="@style/CommodityOptionImageView"
                    android:src="@drawable/outof_stock"/>

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_more_24dp"
            android:tint="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>